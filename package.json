{
  "name": "@pegasusheavy/nestjs-platform-bun",
  "type": "module",
  "version": "0.1.0",
  "description": "NestJS HTTP adapter for Bun runtime",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:e2e:coverage": "vitest run --config vitest.e2e.config.ts --coverage",
    "test:e2e:bun": "bun test test/e2e/",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "bench": "pnpm build && cd benchmark && pnpm install && pnpm bench",
    "prepublishOnly": "pnpm build",
    "prepare": "husky"
  },
  "keywords": [
    "nestjs",
    "bun",
    "http",
    "adapter",
    "platform"
  ],
  "author": "Pegasus Heavy Industries LLC",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PegasusHeavyIndustries/nestjs-bun"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@types/bun": "^1.2.4",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.26.2"
}
